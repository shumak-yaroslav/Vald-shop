<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task11">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor11">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/cor11">

                    <ImageView
                        android:id="@+id/imageView016"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/textView0016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tasks"
                        android:textColor="#2196F3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Publish new product pa..."
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor11">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="4sp" />

                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:background="#DBDCDB"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"/>

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Publish new product page 11"
                android:layout_marginTop="10dp"
                android:textColor="#454444"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date: Jul 1"
                android:textColor="#868A86"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FF454444"/>

                    <TextView
                        android:id="@+id/textView65"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:text="Launch iPhone app for Dashboard"
                        android:textColor="#868A86" />
                </TableRow>

                <View
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FF454444"/>

                    <TextView
                        android:id="@+id/textView67"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:text="in Progress"
                        android:textColor="#868A86" />
                </TableRow>
                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView68"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creation Date"
                        android:textColor="#FF454444"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/textView69"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:text="Aug 14, 2018"
                        android:textColor="#868A86" />
                </TableRow>

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FF454444"/>

                    <TextView
                        android:id="@+id/textView70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="270dp"
                        android:text="High"
                        android:textColor="#868A86" />
                </TableRow>

                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView73"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FF454444"/>

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="280dp"
                        android:text="2"
                        android:textColor="#868A86" />
                </TableRow>

                <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView74"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FF454444"/>

                    <TextView
                        android:id="@+id/textView75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:text="Aug 29, 2018"
                        android:textColor="#868A86" />
                </TableRow>

                <View
                    android:id="@+id/view6"
                    android:layout_width="wrap_content"
                    android:background="#DBDCDB"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"/>
            </TableLayout>


        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>